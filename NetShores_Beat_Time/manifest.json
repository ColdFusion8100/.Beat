{
    "manifest_version": 2,  // Use manifest version 2 for Firefox compatibility
    "name": "NetShores .Beat",
    "version": "1.0",
    "description": "Converts timestamps on webpages to .beat time.",
    "permissions": ["activeTab", "storage"],
    "browser_action": {  // Change 'action' to 'browser_action' for Firefox
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "applications": {  // Add Firefox-specific details
      "gecko": {
        "id": "webmaster@netshores.com",  // Unique ID for Firefox
        "strict_min_version": "53.0"
      }
    }
  }
  
